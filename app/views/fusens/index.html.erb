<p id="notice"><%= notice %></p>

<h1>Fusens</h1>

    <% @fusens.each do |fusen| %>
      <div class= "<%= fusen.id =%>"> 
        <div class="box <%= fusen.color =%> effect1"; 
             style="width: <%= fusen.dom_width =%>px; 
                    height: <%= fusen.dom_height =%>px; 
                    position: absolute; 
                    top: <%= fusen.top =%>px; 
                    left: <%= fusen.left =%>px;"> 
           <span style="float: right;">
              <%= link_to sanitize('<i class="glyphicon glyphicon-pencil"></i>'), edit_fusen_path(fusen), :data => {:toggle=>"modal", :target=>"#edit-Modal"} %>
              <%= link_to sanitize('<i class="glyphicon glyphicon-remove"></i>'), fusen, method: :delete %>
           </span>
             <%= auto_link(simple_format(fusen.message), :all, :target => "_blank") =%>
        </div> <!-- box effect1 -->
      </div> 
    <% end %>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  New Fusen
</button>

<!-- new Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">New Fusen</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', fusen: @fusen %>
      </div>
    </div>
  </div>
</div>

<!-- edit Modal -->
<div class="modal fade" id="edit-Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Fusen</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', fusen: @fusen %>
      </div>
    </div>
  </div>
</div>

